<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        <attr name="fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">

        <attr name="custom_font_tv" format="enum">

            <enum name="bold_extra" value="0" />
            <enum name="bold_extra_italic" value="1" />

            <enum name="bold" value="2" />
            <enum name="bold_italic" value="3" />

            <enum name="semi_bold" value="4" />
            <enum name="semi_bold_italic" value="5" />

            <enum name="regular" value="6" />
            <enum name="regular_italic" value="7" />

            <enum name="light" value="8" />
            <enum name="light_italic" value="9" />

        </attr>

    </declare-styleable>


    <declare-styleable name="CustomEditText">

        <attr name="custom_font_et" format="enum">

            <enum name="bold_extra" value="0" />
            <enum name="bold_extra_italic" value="1" />

            <enum name="bold" value="2" />
            <enum name="bold_italic" value="3" />

            <enum name="semi_bold" value="4" />
            <enum name="semi_bold_italic" value="5" />

            <enum name="regular" value="6" />
            <enum name="regular_italic" value="7" />

            <enum name="light" value="8" />
            <enum name="light_italic" value="9" />

        </attr>

    </declare-styleable>

</resources>
